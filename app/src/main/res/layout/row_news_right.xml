<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Jan 5, 2019 10:50AM EST"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/news_content"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <LinearLayout
        android:id="@+id/news_content"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="100dp"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="News Title News Title News Title News Title News Title News Title News Title News Title News Title News Title News Title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/title"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="News Title News Title News Title News Title News Title News Title News Title News Title News Title News Title News Title"
            android:textSize="13sp"
            android:textStyle="normal"
            android:textColor="@color/title"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="News Title News Title News Title News Title News Title News Title News Title News Title News Title News Title News Title"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/text"
            android:layout_marginTop="3dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>